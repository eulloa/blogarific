<section class="posts">
    {{#posts}}
        <section class="single-post">
            <section class="post-content">
                <h1>{{ title }}</h1>
                <h2>{{ content }}</h2>
                {{#if ../userInfo.username }}
                    {{#unless alreadyLiked}}
                        <span class="likePost" data-postid="{{_id}}">Like?</span>
                    {{/unless}}
                {{/if}}
                <p class="likes">Likes: {{ likes }}</p>
            </section>
            <section class="post-info">
                <h3>{{#FormatDate date}}{{/FormatDate}}</h3>
                <img src="{{#GetGravatar userId}}{{/GetGravatar}}" />
            </section>
        </section>
    {{else}}
        <p>There are no posts, come back later!</p>
    {{/posts}}
</section>